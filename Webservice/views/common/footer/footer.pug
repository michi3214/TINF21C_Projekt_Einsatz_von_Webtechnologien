  ul(class="nav justify-content-center border-bottom py-1")
    each page in pages
      li(class="justify-content-center")
        a(href=page.link class="nav-link px-2 text-body-secondary")=page.title

  div(class=" text-body-secondary d-flex")
    // Information text 
    div
      a(href="/" class="text-decoration-none text-body-secondary px-2")=websiteName
      span(class="text-body-secondary  px-2") &copy; 2023 
      span(class="text-body-secondary  px-2") Grote Michael
    
    // Links to Github, ...
    ul(class="nav list-inline flex-fill justify-content-end" style="font-size: 1.5em;")
      li(class="nav-item px-2")
        a(href="https://github.com/michi3214/Projekt_Web_Engenering" target="_blank" class="h-75")
          i(class="bi bi-github"  alter="GitHub Link")

